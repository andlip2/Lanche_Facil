<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textAdapterTitulo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Titulo 01"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/imageAdapterAnuncio1"
            app:layout_constraintEnd_toEndOf="@+id/imageAdapterAnuncio1"
            app:layout_constraintStart_toStartOf="@+id/imageAdapterAnuncio1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textAdapterTitulo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Titulo 02"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/imageAdapterAnuncio2"
            app:layout_constraintEnd_toEndOf="@+id/imageAdapterAnuncio2"
            app:layout_constraintStart_toStartOf="@+id/imageAdapterAnuncio2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageAdapterAnuncio1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/textAdapterValor1"
            app:layout_constraintEnd_toStartOf="@+id/imageAdapterAnuncio2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textAdapterTitulo1"
            app:srcCompat="@drawable/padrao" />

        <ImageView
            android:id="@+id/imageAdapterAnuncio2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/textAdapterValor2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageAdapterAnuncio1"
            app:layout_constraintTop_toBottomOf="@+id/textAdapterTitulo2"
            app:srcCompat="@drawable/padrao" />

        <TextView
            android:id="@+id/textAdapterValor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="R$:100.00"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageAdapterAnuncio1"
            app:layout_constraintStart_toStartOf="@+id/imageAdapterAnuncio1"
            app:layout_constraintTop_toBottomOf="@+id/imageAdapterAnuncio1" />

        <TextView
            android:id="@+id/textAdapterValor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="R$:100.00"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageAdapterAnuncio2"
            app:layout_constraintStart_toStartOf="@+id/imageAdapterAnuncio2"
            app:layout_constraintTop_toBottomOf="@+id/imageAdapterAnuncio2" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
